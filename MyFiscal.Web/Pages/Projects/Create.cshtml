@page
@model MyFiscal.Web.Pages.Projects.CreateModel
@{
    ViewData["Title"] = "Create Project";
}

<h2 class="text-info">Create Project</h2>

<div class="border container" style="padding: 30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Project.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Project.Name" class="form-control" />
            </div>
            <span asp-validation-for="Project.Name" class="text-danger"></span>
            <div class="col-4">
                <label asp-for="Project.StartDate"></label>
            </div>
            <div class="col-6">
                <input asp-for="Project.StartDate" class="form-control" />
            </div>
            <span asp-validation-for="Project.StartDate" class="text-danger"></span>
            <div class="col-4">
                <label asp-for="Project.PotentialRevenue"></label>
            </div>
            <div class="col-6">
                <input asp-for="Project.PotentialRevenue" class="form-control" />
            </div>
            <span asp-validation-for="Project.PotentialRevenue" class="text-danger"></span>

        </div>
        <div class="form-group row offset-4">
            <div class="col-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to Projects</a>
            </div>
        </div>
    </form>
</div>


